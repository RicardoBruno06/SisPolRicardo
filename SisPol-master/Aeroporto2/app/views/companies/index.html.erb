<p id="notice"><%= notice %></p>

<h1>Listando companhias</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.cnpj %></td>
        <td><%= link_to 'Mostrar', company %></td>
        <td><%= link_to 'Editar', edit_company_path(company) %></td>
        <td><%= button_to 'Destruir', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova companhia', new_company_path %>
